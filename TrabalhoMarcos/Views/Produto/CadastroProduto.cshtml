@model TrabalhoMarcos.Models.Produto

@{
    ViewData["Title"] = "..::CadastroProduto::..";
    Layout = "~/Views/Shared/_NossoLayout.cshtml";
}

@* Codigo formulario cadastro cliente *@
<br />
<br />
<br />
<br />
<div class="container">
    @* Titulo *@
    <div class="row">
        <div class="col text-center">
            <h1>Cadastro Cliente</h1>
        </div>
    </div>
    <form method="post">
        <div class="row ">
            <div class="col">
                <label asp-for="Nome" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Nome" class="form-control" id="Nome" type="text" />
            </div>
            <div class="col-lg-3">
                <label asp-for="Email" class="col-form-label fw-bold"></label>
                <input asp-for="Email" class="form-control" id="CPF" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="CPF" class="col-form-label fw-bold text-nowrap"></label>
                <input asp-for="CPF" class="form-control" id="Usuario" type="text" />
            </div>
            <div class="col-lg-2">
                <label asp-for="Telefone" class="col-form-label fw-bold text-nowrap"></label>
                <input asp-for="Telefone" class="form-control" id="Senha" type="text" />
            </div>
        </div>
        <div class="col-sm-2">
            <label asp-for="Endereco" class="col-sm-2 col-form-label fw-bold"></label>
            <input asp-for="Endereco" class="form-control" id="Bairro" type="text" />
        </div>
        <div class="row mt-3 justify-content-md-end">
            <div class="col-3 align-content-end ">
                <input type="submit" class="btn btn-outline-info btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>